@model PCStore_MVC.Models.ModelDB.Product

@{
    ViewData["Title"] = Model.ProductName;
}

<h1>@ViewData["Title"]</h1>

<div>
	<h4>Информация</h4>
	<hr />
	<dt class="col-sm-2">
		<div class="container" style="height: 300px">
			<img class="h-100" src="/Products/@(Model.Image.ImageTitle).@(Model.Image.Format)" alt="My Image">
		</div>
	</dt>
	<dl class="row">
		<dt class = "col-sm-2">
			Название продукта
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.ProductName)
		</dd>
		<dt class = "col-sm-2">
			Описание
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt class = "col-sm-2">
			Цена
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.UnitPrice)
		</dd>
		<dt class = "col-sm-2">
			Категория
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.Category.CategoryName)
		</dd>
		<dt class = "col-sm-2">
			Производитель
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.Producer.ProducerName)
		</dd>
	</dl>
</div>
@if (User.IsInRole("Administrators"))
{
	<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Изменить название продукта</a> @*|*@
@*    <a asp-action="Index">Back to List</a>*@
</div>
}
